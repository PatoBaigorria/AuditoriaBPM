<!-- res/drawable/spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del Spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Color de fondo -->
            <corners android:radius="5dp" /> <!-- Esquinas redondeadas -->
            <stroke android:width="2dp" android:color="#8B8B8B" /> <!-- Color del borde: gris oscuro -->
        </shape>
    </item>
    <!-- Flecha -->
    <item android:drawable="@android:drawable/arrow_down_float"
        android:gravity="end|center_vertical"
        android:paddingRight="20dp"/> <!-- Ajusta el padding segÃºn sea necesario -->
</layer-list>
