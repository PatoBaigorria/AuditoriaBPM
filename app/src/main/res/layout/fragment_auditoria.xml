<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AuditoriaFragment">

    <TextView
        android:id="@+id/tvNombOp"
        android:layout_width="79dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:text="Operario:"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCampoNomb"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:ems="15"
        android:inputType="text"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/tvNombOp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Fecha: "
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/etCampoNomb"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCampoFecha"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="73dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvFecha"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>