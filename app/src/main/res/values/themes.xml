<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AuditoriaBPM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar_blue</item>
        <item name="colorPrimaryVariant">@color/toolbar_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background and text colors -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
        
        <!-- Force light theme -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        
        <!-- Toolbar theme -->
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="Theme.AuditoriaBPM" parent="Base.Theme.AuditoriaBPM" />

    <style name="Theme.AuditoriaBPM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.AuditoriaBPM.Splash" parent="Theme.AuditoriaBPM">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.Theme.AuditoriaBPM.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
